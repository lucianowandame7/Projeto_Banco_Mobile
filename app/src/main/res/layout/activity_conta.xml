<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ContaActivity">

    <!-- Título da tela -->
    <TextView
        android:id="@+id/tituloConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerenciar Conta"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Botão 'Depositar na conta' -->
    <Button
        android:id="@+id/buttonDepositarNaConta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Depositar na conta"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        android:padding="12dp"
        android:onClick="DepositarNaConta"
        app:layout_constraintTop_toBottomOf="@id/tituloConta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão 'Remover da conta' -->
    <Button
        android:id="@+id/buttonRemoverConta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remover da conta"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF5722"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:padding="12dp"
        android:onClick="RemoverDaConta"
        app:layout_constraintTop_toBottomOf="@id/buttonDepositarNaConta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão 'Extrato da conta' -->
    <Button
        android:id="@+id/buttonExtratoDaConta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Extrato da conta"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:padding="12dp"
        android:onClick="ExtratoDaConta"
        app:layout_constraintTop_toBottomOf="@id/buttonRemoverConta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Rodapé informativo -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerencie sua conta com segurança"
        android:textColor="#757575"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
