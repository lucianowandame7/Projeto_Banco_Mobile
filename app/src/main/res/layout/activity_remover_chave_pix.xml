<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".RemoverChavePixActivity">

    <!-- Título da tela -->
    <TextView
        android:id="@+id/tituloRemoverPix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remover Chave Pix"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo de entrada para a chave Pix -->
    <EditText
        android:id="@+id/editTextRemoverChavePix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Digite a chave que deseja remover"
        android:inputType="text"
        android:backgroundTint="#2196F3"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tituloRemoverPix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp" />

    <!-- Botão para remover chave Pix -->
    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remover Chave Pix"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F44336"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        android:padding="12dp"
        android:onClick="OnClickRemoverChavePix"
        app:layout_constraintTop_toBottomOf="@id/editTextRemoverChavePix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Rodapé informativo -->
    <TextView
        android:id="@+id/footerTextRemoverPix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirme as informações antes de remover"
        android:textColor="#757575"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
